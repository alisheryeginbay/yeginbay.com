---
import { getCollection, render } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
	const posts = await getCollection("blog");
	return posts.map((post) => ({
		params: { slug: post.id },
		props: { post },
	}));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<BaseLayout title={post.data.title} description={post.data.description} titleSuffix={false}>
	<article class="relative">
		<div class="fixed top-0 left-0 right-0 h-16 bg-gradient-to-b from-background to-transparent pointer-events-none z-10" />
		<h1 class="font-serif">{post.data.title}</h1>
		<p class="text-sm text-foreground-secondary">
			{
				post.data.pubDate.toLocaleDateString("en-US", {
					year: "numeric",
					month: "long",
					day: "numeric",
				})
			}
		</p>
		<div class="prose mt-8 space-y-6">
			<Content />
		</div>
		<hr class="my-8 border-foreground-secondary/20" />
		<a href="/blog" class="text-sm text-foreground-secondary">Go back</a>
	</article>
</BaseLayout>
